pm                               = ondemand
pm.max_children                  = 50
request_terminate_timeout        = 600s
php_admin_flag[log_errors]       = on
slowlog                          = /home/%USERNAME%/log/php_%USERNAME%-slow.log
php_admin_value[error_log]       = /home/%USERNAME%/log/php_%USERNAME%-error.log
;php_admin_value[memory_limit]   = 128M
;php_admin_value[error_reporting] = E_ALL
php_admin_value[error_reporting] = E_NONE

php_value[session.save_handler]  = files
